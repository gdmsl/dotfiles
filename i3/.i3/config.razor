#
# ~/.i3/config.razor
#
# vim: set ft=conf sw=4 ts=4 sts=4 et tw=78 fdm=marker fdl=0 foldmarker={{{,}}} :

# AUTHOR: Guido Masella <guido.masella@gmail.com>

# KEYS {{{
set $lockkey ugrave
set $tombkey egrave
set $webkey backslash
set $gamingkey apostrophe
set $commkey igrave
set $scratchkey minus
set $stickykey dot
# }}}

# WORKSPACES {{{

# outputs
set $O1 LVDS1
set $O2 VGA1
set $O3 HDMI1

# }}}

# BARS {{{

bar {
	output            $O1
	status_command    i3blocks -c ~/.i3blocks/razor.conf
	position          top
	workspace_buttons yes
    tray_output $O1
    strip_workspace_numbers yes

	font pango:Hack, Source Code Pro, Icons, FontAwesome 10

	colors {
		background #262626
		statusline #ebdbb2
		separator #928374

        focused_workspace  #ebdbb2 #484848
        active_workspace   #a89984 #262626
        inactive_workspace #a89984 #262626
        urgent_workspace   #262626 #cc241d
	}
}

bar {
	output            $O3
	status_command    i3blocks -c ~/.i3blocks/razor.conf
	position          top
	workspace_buttons yes
    tray_output $O1
    strip_workspace_numbers yes

	font pango:Hack, Source Code Pro, Icons, FontAwesome 9

	colors {
		background #262626
		statusline #ebdbb2
		separator #928374

        focused_workspace  #ebdbb2 #484848
        active_workspace   #a89984 #262626
        inactive_workspace #a89984 #262626
        urgent_workspace   #262626 #cc241d
	}
}
# }}}
