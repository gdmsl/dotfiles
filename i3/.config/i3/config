# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango: Fira Code 10, FontAwesome 10

# Start XDG autostart .desktop files using dex. See also
# https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id dex --autostart --environment i3

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- blurlock

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet

# Compositor
exec --no-startup-id "picom --config ~/.config/picom/i3.conf -b"

# the bar
exec_always --no-startup-id "~/.config/polybar/launch.sh"

# DUNST. A notification daemon
exec --no-startup-id "dunst"

#wallpaper
exec --no-startup-id "nitrogen --restore"

# Clipboard
exec --no-startup-id "greenclip daemon"

# border width
set $borderwidth 3

# new windows are titleless
new_window pixel $borderwidth
new_float pixel $borderwidth

# Use the Super ("win") key as default modifier
set $mod Mod4

# use these keys for focus, movement, and resize directions when reaching for
# the arrows is not convenient
set $left h
set $down j
set $up k
set $right l

# use Mouse+Mod1 to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# start a filemanager
bindsym $mod+x exec "alacritty -e ranger"
bindsym $mod+Shift+x exec "dolphin"

# start rofi combi mode
bindsym $mod+d exec "rofi -show combi"

# start rofi math mode
bindsym $mod+Shift+d exec "rofi -show calc -modi calc -no-show-match -no-sort"

# clipboard manager
bindsym $mod+b exec "rofi -modi 'clipboard:greenclip print' -show clipboard -run-command '{cmd}'"

# kill focused window
bindsym $mod+Shift+q kill

# change focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# move focused window
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# move workspace
bindsym $mod+Control+h move workspace to output left
bindsym $mod+Control+j move workspace to output down
bindsym $mod+Control+k move workspace to output up
bindsym $mod+Control+l move workspace to output right

# split in horizontal orientation
bindsym $mod+o split h

# split in vertical orientation
bindsym $mod+v split v

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# keybindings to change border style
bindsym $mod+t border normal $borderwidth
bindsym $mod+y border pixel $borderwidth
bindsym $mod+u border none

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+c focus child

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# move the currently focused window to the scratchpad
bindsym $mod+Shift+slash move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+slash scratchpad show

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym Mod1+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        bindsym $left       resize shrink width 10 px or 10 ppt

        # Pressing right will grow the window’s width.
        bindsym $down       resize grow height 10 px or 10 ppt

        # Pressing up will shrink the window’s height.
        bindsym $up         resize shrink height 10 px or 10 ppt

        # Pressing down will grow the window’s height.
        bindsym $right      resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or Mod1+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
# resize windows
bindsym $mod+r mode "resize"

# lock screen
bindsym $mod+comma exec "blurlock"

# switch workspace back and forth
bindsym $mod+Tab workspace back_and_forth

# switch to prev or next workspace
bindsym $mod+p workspace prev_on_output
bindsym $mod+n workspace next_on_output

# shutdown menu 
set $mode_system (l) lock, (e) logout, (z) suspend, (h) hibernate, (r) reboot, (s) shutdown, (y) hybrid
mode "$mode_system" {
	bindsym l exec --no-startup-id "i3exit.sh lock", mode "default"
	bindsym e exec --no-startup-id "i3exit.sh logout", mode "default"
	bindsym z exec --no-startup-id "i3exit.sh suspend", mode "default"
	bindsym h exec --no-startup-id "i3exit.sh hibernate", mode "default"
	bindsym r exec --no-startup-id "i3exit.sh reboot", mode "default"
	bindsym s exec --no-startup-id "i3exit.sh shutdown", mode "default"
	bindsym y exec --no-startup-id "i3exit.sh hybrid", mode "default"

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym $mod+z mode "default"
}
# shutdown menu 
bindsym $mod+z mode "$mode_system"

# mark or unmark windows and move to marker
set $mode_manage Mark (m), Unmark (u), Go to mark (g), Workspace (w), Command (c)
mode "$mode_manage" {
    bindsym m exec i3-input -F 'mark %s' -P 'Mark: '
    bindsym g exec i3-input -F '[con_mark="%s"] focus' -P 'Go to: '
    bindsym u exec i3-input -F 'unmark %s' -P 'Unmark: '
    bindsym w exec i3-input -F 'workspace %s' -P 'Workspace: '
    bindsym c exec i3-input -P 'Command: '

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
    bindsym $mod+m mode "default"
}
# mark or unmark windows and move to marker
bindsym $mod+m mode "$mode_manage"

# take screenshots
bindsym Print exec --no-startup-id "maim ~/Pictures/Screenshots/$(date +%F-%T).png && paplay /usr/share/sounds/freedesktop/stereo/screen-capture.oga"

# Brightness control
bindsym XF86MonBrightnessDown exec "xbacklight -dec 10"
bindsym XF86MonBrightnessUp exec "xbacklight -inc 20"

# Volume PULSE
bindsym XF86AudioRaiseVolume exec --no-startup-id "pactl set-sink-volume @DEFAULT_SINK@ +10%"
bindsym XF86AudioLowerVolume exec --no-startup-id "pactl set-sink-volume @DEFAULT_SINK@ -10%"
bindsym XF86AudioMute exec --no-startup-id "pactl set-sink-mute @DEFAULT_SINK@ toggle"
bindsym XF86AudioMicMute exec --no-startup-id "pactl set-source-mute @DEFAULT_SOURCE@ toggle"

# include host specific configurations
include ~/.config/i3/`hostname`.conf

# disable back and forth when pressing the same workspace 
workspace_auto_back_and_forth no

