set notification-error-bg       "#ab4642"
set notification-error-fg       "#282c34"

set notification-warning-bg     "#e5c07b"
set notification-warning-fg     "#282c34"

set highlight-color             "#585858"
set highlight-active-color      "#98c379"

set completion-highlight-bg     "#7cafc2"
set completion-highlight-fg     "#abb2bf"

set completion-bg               "#3e4451"
set completion-fg               "#abb2bf"

set notification-bg             "#98c379"
set notification-fg             "#282c34"

set recolor-lightcolor          "#282c34"
set recolor-darkcolor           "#abb2bf"
set recolor                     "true"

# setting recolor-keep true will keep any color your pdf has.
# if it is false, it'll just be black and white
set recolor-keephue             "false"

# Rest of your configs go here:
set font "Hack 10"
set smooth-scroll "true"
