# WORKSPACES {{{

# outputs
set $O1 LVDS1
set $O2 VGA1
set $O3 HDMI1

# }}}

# BARS {{{

bar {
	output            LVDS1
	status_command    i3blocks -c ~/.i3blocks-razor.conf
	position          top
	workspace_buttons yes
    tray_output LVDS1
    strip_workspace_numbers yes

	font pango:Source Code Pro, Icons, FontAwesome 10

	colors {
		background #272822
		statusline #f8f8f2
		separator #f8f8f2

		focused_workspace  #272822 #66d9ef
		active_workspace   #ffffff #333333
		inactive_workspace #888888 #2e3436
		urgent_workspace   #f8f8f2 #f92672
	}
}
# }}}
