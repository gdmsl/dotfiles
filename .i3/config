# BASE/APPS KEYBINDINGS ------------------------------------------------------

# Use the Super ("win") key as default modifier
set $mod Mod4

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Start a terminal
bindsym $mod+Return exec termite
bindsym $mod+Shift+Return exec i3-sensible-terminal

# Start a filemanager
bindsym $mod+x exec xterm -e ranger
bindsym $mod+Shift+x exec thunar

# start dmenu (a program launcher) with Super+d and
# .. a modified version (which reads only .desktop files) with
# .. Super+Shift+d
bindsym $mod+d exec dmenu_run -fn 'Source Code Pro-10' -nb '#111111' -nf '#babdb6' -sb '#8ae234' -sf '#111111'
bindsym $mod+Shift+d exec --no-startup-id i3-dmenu-desktop -dmenu="dmenu -fn 'Source Code Pro-10' -nb '#111111' -nf '#babdb6' -sb '#8ae234' -sf '#111111'"


# Reload the configuration file
bindsym $mod+Shift+c reload

# Restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# Exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# Brightness control
bindsym XF86MonBrightnessDown exec "xbacklight -dec 10"
bindsym XF86MonBrightnessUp exec "xbacklight -inc 20"

# Volume
bindsym XF86AudioMute exec --no-startup-id "amixer set Master toggle"
bindsym XF86AudioRaiseVolume exec --no-startup-id "amixer set Master 5%+"
bindsym XF86AudioLowerVolume exec --no-startup-id "amixer set Master 5%-"

# Alsamixer
bindsym $mod+m exec xterm -e alsamixer

# Locker
bindsym $mod+ugrave exec i3lock -d -c 000000

# Shutdown menu
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown, (Shift+h) hybrid-sleep
mode "$mode_system" {
	bindsym l exec --no-startup-id "~/.local/bin/i3exit.sh lock", mode "default"
	bindsym e exec --no-startup-id "~/.local/bin/i3exit.sh logout", mode "default"
	bindsym s exec --no-startup-id "~/.local/bin/i3exit.sh suspend", mode "default"
	bindsym h exec --no-startup-id "~/.local/bin/i3exit.sh hibernate", mode "default"
	bindsym r exec --no-startup-id "~/.local/bin/i3exit.sh reboot", mode "default"
	bindsym Shift+s exec --no-startup-id "~/.local/bin/i3exit.sh shutdown", mode "default"
	bindsym Shift+h exec --no-startup-id "~/.local/bin/i3exit.sh hybrid", mode "default"

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+z mode "$mode_system"

# add todo with todo.sh
bindsym $mod+i exec i3-input -F 'exec --no-startup-id todo.sh add "%s"' -P 'Add Todo: '

# take screenshots
bindcode 107 exec --no-startup-id "scrot -e 'mv $f ~/Immagini/Screenshots/'"

# ----------------------------------------------------------------------------


# LAYOUT/WINDOWS KEYBINDINGS -------------------------------------------------

# kill focused window
bindsym $mod+Shift+q kill

# Change Focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+o split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+c focus child

# Mark/unmark window and move to marker
bindsym $mod+KP_7 exec i3-input -F 'mark %s' -P 'Mark: '
bindsym $mod+KP_8 exec i3-input -F '[con_mark="%s"] focus' -P 'Go to: '
bindsym $mod+KP_9 exec i3-input -F 'unmark %s' -P 'Unmark: '

# resize window (you can also use the mouse for that)
mode "resize" {
	# These bindings trigger as soon as you enter the resize mode

	# Pressing left will shrink the window’s width.
	# Pressing right will grow the window’s width.
	# Pressing up will shrink the window’s height.
	# Pressing down will grow the window’s height.
	bindsym h resize shrink width 10 px or 10 ppt
	bindsym j resize grow height 10 px or 10 ppt
	bindsym k resize shrink height 10 px or 10 ppt
	bindsym l resize grow width 10 px or 10 ppt

	# same bindings, but for the arrow keys
	bindsym Left resize shrink width 10 px or 10 ppt
	bindsym Down resize grow height 10 px or 10 ppt
	bindsym Up resize shrink height 10 px or 10 ppt
	bindsym Right resize grow width 10 px or 10 ppt

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"


# ----------------------------------------------------------------------------

# WORKSPACES -----------------------------------------------------------------

# Defining workspace variables
set $WS01 1
set $WS02 2
set $WS03 3
set $WS04 4
set $WS05 5
set $WS06 6
set $WS07 7
set $WS08 8
set $WS09 9
set $WS10 10
set $WS11 11
set $WS12 12
set $WS13 13
set $WS14 14
set $WS15 15
set $WS16 16
set $WSweb web
set $WSgaming gaming

# outputs
set $O1 LVDS1
set $O2 VGA1
set $O3 HDMI1

# Putting workspaces on screens
# .. 10 workspaces on LVDS1 (internal laptop monitor)
# .. 3 workpaces on VGA1
workspace $WS01 output $O1
workspace $WS02 output $O1
workspace $WS03 output $O1
workspace $WS04 output $O1
workspace $WS05 output $O1
workspace $WS06 output $O1
workspace $WS07 output $O1
workspace $WS08 output $O1
workspace $WS09 output $O1
workspace $WS10 output $O1
workspace $WS11 output $O3
workspace $WS12 output $O3
workspace $WS13 output $O3
workspace $WS14 output $O3
workspace $WS15 output $O3
workspace $WS16 output $O3
workspace $WSweb output $O1
workspace $WSgaming output $01

# switch to workspace
bindsym $mod+1 workspace $WS01
bindsym $mod+2 workspace $WS02
bindsym $mod+3 workspace $WS03
bindsym $mod+4 workspace $WS04
bindsym $mod+5 workspace $WS05
bindsym $mod+6 workspace $WS06
bindsym $mod+7 workspace $WS07
bindsym $mod+8 workspace $WS08
bindsym $mod+9 workspace $WS09
bindsym $mod+0 workspace $WS10
bindsym $mod+KP_1 workspace $WS11
bindsym $mod+KP_2 workspace $WS12
bindsym $mod+KP_3 workspace $WS13
bindsym $mod+KP_4 workspace $WS14
bindsym $mod+KP_5 workspace $WS15
bindsym $mod+KP_6 workspace $WS16
bindsym $mod+backslash workspace $WSweb
bindsym $mod+apostrophe workspace $WSgaming

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $WS01
bindsym $mod+Shift+2 move container to workspace $WS02
bindsym $mod+Shift+3 move container to workspace $WS03
bindsym $mod+Shift+4 move container to workspace $WS04
bindsym $mod+Shift+5 move container to workspace $WS05
bindsym $mod+Shift+6 move container to workspace $WS06
bindsym $mod+Shift+7 move container to workspace $WS07
bindsym $mod+Shift+8 move container to workspace $WS08
bindsym $mod+Shift+9 move container to workspace $WS09
bindsym $mod+Shift+0 move container to workspace $WS10
bindsym $mod+Shift+KP_1 move container to workspace $WS11
bindsym $mod+Shift+KP_2 move container to workspace $WS12
bindsym $mod+Shift+KP_3 move container to workspace $WS13
bindsym $mod+Shift+KP_4 move container to workspace $WS14
bindsym $mod+Shift+KP_5 move container to workspace $WS15
bindsym $mod+Shift+KP_6 move container to workspace $WS16
bindsym $mod+Shift+backslash move container to workspace $WSweb
bindsym $mod+Shift+apostrophe move container to workspace $WSgaming

# switch workspace back and forth
bindsym $mod+b workspace back_and_forth

# switch to prev or next workspace
bindsym $mod+p workspace prev_on_output
bindsym $mod+n workspace next_on_output

# ----------------------------------------------------------------------------


# WINDOWS RULES --------------------------------------------------------------

# assign web browsers to workspace 2:web
assign [class="Chromium"] $WSweb
assign [class="Firefox"] $WSweb
assign [class="Midori"] $WSweb

# force apps to go in floating mode
for_window [class="Nautilus" instance="file_progress"] floating enable
for_window [class="Gnome-clocks"] floating enable
for_window [class="XClock"] floating enable
for_window [class="Thunar" title="Avanzamento delle operazione sui file"] floating enable
for_window [class="Xfce4-notifyd"] floating enable

# Steam goes float on workspace 9 (so it will be more difficult
# .. to reach and less distracting)
for_window [class="Steam"] floating enable
assign [class="Steam"] $WSgaming

