# BARS -----------------------------------------------------------------------

# LVDS1 bar
bar {
	output            LVDS1
	status_command    i3status
	position          bottom
	workspace_buttons yes
	tray_output LVDS1

	font pango:Source Code Pro, Icons, FontAwesome 10

	colors {
		background #111111
		statusline #babdb6
		separator #babdb6

		focused_workspace  #111111 #8ae234
		active_workspace   #ffffff #333333
		inactive_workspace #888888 #2e3436
		urgent_workspace   #ffffff #ef2929
	}
}

# BIG monitor bar
bar {
	output            HDMI1
    output            VGA1
	status_command    i3status -c /home/gdmsl/.i3status-big.conf
	position          top
	workspace_buttons yes
    tray_output LVDS1

	font pango:Source Code Pro, Icons, FontAwesome 10

	colors {
		background #111111
		statusline #babdb6
		separator #babdb6

		focused_workspace  #111111 #8ae234
		active_workspace   #ffffff #333333
		inactive_workspace #888888 #2e3436
		urgent_workspace   #ffffff #ef2929
	}
}
