# AUTHOR: Guido Masella <guido.masella@gmail.com>

# BASE/APPS KEYBINDINGS ------------------------------------------------------

# Use the Super ("win") key as default modifier
set $mod Mod4

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Start a terminal
bindsym $mod+Return exec termite
bindsym $mod+Shift+Return exec i3-sensible-terminal

# Start a filemanager
bindsym $mod+KP_5 exec xterm -e ranger

# start dmenu (a program launcher) with Super+d and
# .. a modified version (which reads only .desktop files) with
# .. Super+Shift+d
bindsym $mod+d exec dmenu_run
bindsym $mod+Shift+d exec --no-startup-id i3-dmenu-desktop

# Reload the configuration file
bindsym $mod+Shift+c reload

# Restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# Exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# Brightness control
bindsym XF86MonBrightnessDown exec "xbacklight -dec 10"
bindsym XF86MonBrightnessUp exec "xbacklight -inc 20"

# Volume
bindsym XF86AudioMute exec --no-startup-id "amixer set Master toggle"
bindsym XF86AudioRaiseVolume exec --no-startup-id "amixer set Master 5%+"
bindsym XF86AudioLowerVolume exec --no-startup-id "amixer set Master 5%-"

# Alsamixer
bindsym $mod+m exec xterm -e alsamixer

# Locker
bindsym $mod+ugrave exec i3lock -d -c 000000

# Shutdown menu
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown, (Shift+h) hybrid-sleep
mode "$mode_system" {
	bindsym l exec --no-startup-id "~/.local/bin/i3exit.sh lock", mode "default"
	bindsym e exec --no-startup-id "~/.local/bin/i3exit.sh logout", mode "default"
	bindsym s exec --no-startup-id "~/.local/bin/i3exit.sh suspend", mode "default"
	bindsym h exec --no-startup-id "~/.local/bin/i3exit.sh hibernate", mode "default"
	bindsym r exec --no-startup-id "~/.local/bin/i3exit.sh reboot", mode "default"
	bindsym Shift+s exec --no-startup-id "~/.local/bin/i3exit.sh shutdown", mode "default"
	bindsym Shift+h exec --no-startup-id "~/.local/bin/i3exit.sh hybrid", mode "default"

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+z mode "$mode_system"

# add todo with todo.sh
bindsym $mod+i exec i3-input -F 'exec --no-startup-id todo.sh add "%s"' -P 'Add Todo: '

# take screenshots
bindcode 107 exec --no-startup-id "scrot -e 'mv $f ~/Immagini/Screenshots/'"

# ----------------------------------------------------------------------------


# LAYOUT/WINDOWS KEYBINDINGS -------------------------------------------------

# kill focused window
bindsym $mod+Shift+q kill

# Change Focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+o split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+c focus child

# Mark/unmark window and move to marker
bindsym $mod+KP_7 exec i3-input -F 'mark %s' -P 'Mark: '
bindsym $mod+KP_8 exec i3-input -F '[con_mark="%s"] focus' -P 'Go to: '
bindsym $mod+KP_9 exec i3-input -F 'unmark %s' -P 'Unmark: '

# resize window (you can also use the mouse for that)
mode "resize" {
	# These bindings trigger as soon as you enter the resize mode

	# Pressing left will shrink the window’s width.
	# Pressing right will grow the window’s width.
	# Pressing up will shrink the window’s height.
	# Pressing down will grow the window’s height.
	bindsym h resize shrink width 10 px or 10 ppt
	bindsym j resize grow height 10 px or 10 ppt
	bindsym k resize shrink height 10 px or 10 ppt
	bindsym l resize grow width 10 px or 10 ppt

	# same bindings, but for the arrow keys
	bindsym Left resize shrink width 10 px or 10 ppt
	bindsym Down resize grow height 10 px or 10 ppt
	bindsym Up resize shrink height 10 px or 10 ppt
	bindsym Right resize grow width 10 px or 10 ppt

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"


# ----------------------------------------------------------------------------

# WORKSPACES -----------------------------------------------------------------

# Defining workspace variables
# command information centre (terminals for general use)
set $WS01 1:cic
# joint intellicence (web browsing)
set $WS02 2:jit
#communications center (chat & emails)
set $WS03 3:com
set $WS04 4:dradis
# aircraft maintenance division (system maintenante)
set $WS05 5:amid
# fleet operations division (ssh terminals)
set $WS06 6:fleetops
set $WS07 7:deck
set $WS08 8:deck
# combat system division (gaming)
set $WS09 9:csd
set $WS10 10:deck
set $WS11 11:deck
set $WS12 12:deck
set $WS13 13:deck

# Putting workspaces on screens
# .. 10 workspaces on LVDS1 (internal laptop monitor)
# .. 3 workpaces on VGA1
workspace $WS01 output LVDS1
workspace $WS02 output LVDS1
workspace $WS03 output LVDS1
workspace $WS04 output LVDS1
workspace $WS05 output LVDS1
workspace $WS06 output LVDS1
workspace $WS07 output LVDS1
workspace $WS08 output LVDS1
workspace $WS09 output LVDS1
workspace $WS10 output LVDS1
workspace $WS11 output VGA1
workspace $WS12 output VGA1
workspace $WS13 output VGA1

# switch to workspace
bindsym $mod+1 workspace $WS01
bindsym $mod+2 workspace $WS02
bindsym $mod+3 workspace $WS03
bindsym $mod+4 workspace $WS04
bindsym $mod+5 workspace $WS05
bindsym $mod+6 workspace $WS06
bindsym $mod+7 workspace $WS07
bindsym $mod+8 workspace $WS08
bindsym $mod+9 workspace $WS09
bindsym $mod+0 workspace $WS10
bindsym $mod+KP_1 workspace $WS11
bindsym $mod+KP_2 workspace $WS12
bindsym $mod+KP_3 workspace $WS13

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $WS01
bindsym $mod+Shift+2 move container to workspace $WS02
bindsym $mod+Shift+3 move container to workspace $WS03
bindsym $mod+Shift+4 move container to workspace $WS04
bindsym $mod+Shift+5 move container to workspace $WS05
bindsym $mod+Shift+6 move container to workspace $WS06
bindsym $mod+Shift+7 move container to workspace $WS07
bindsym $mod+Shift+8 move container to workspace $WS08
bindsym $mod+Shift+9 move container to workspace $WS09
bindsym $mod+Shift+0 move container to workspace $WS10
bindsym $mod+Shift+KP_1 move container to workspace $WS11
bindsym $mod+Shift+KP_2 move container to workspace $WS12
bindsym $mod+Shift+KP_3 move container to workspace $WS13

# switch workspace back and forth
bindsym $mod+b workspace back_and_forth

# switch to prev or next workspace
bindsym $mod+KP_4 workspace prev_on_output
bindsym $mod+KP_6 workspace next_on_output

# ----------------------------------------------------------------------------


# WINDOWS RULES --------------------------------------------------------------

# assign web browsers to workspace 2:web
assign [class="Chromium"] $WS02
assign [class="Firefox"] $WS02
assign [class="Midori"] $WS02

# force apps to go in floating mode
for_window [class="Nautilus" instance="file_progress"] floating enable
for_window [class="Gnome-clocks"] floating enable
for_window [class="XClock"] floating enable
for_window [class="Thunar" title="Avanzamento delle operazione sui file"] floating enable
for_window [class="Xfce4-notifyd"] floating enable

# Steam goes float on workspace 9 (so it will be more difficult
# .. to reach and less distracting)
for_window [instance="Steam"] $WS09; floating enable

# ----------------------------------------------------------------------------


# LOOK -----------------------------------------------------------------------

# Font used to display widows titles, and other i3 stuffs
# .. not used for i3bar
font pango:Droid Sans Mono 10

# Colors
# class                 border  backgr. text    indicator
client.focused          #c4a000 #edd400 #111111 #f57900
client.focused_inactive #333333 #5f676a #ffffff #484e50
client.unfocused        #333333 #222222 #888888 #292d2e
client.urgent           #2f343a #cc0000 #ffffff #a40000

# Keybindings to change border style
bindsym $mod+t border normal
bindsym $mod+y border pixel 2
bindsym $mod+u border none

# New windows are titleless and with 2 pixel border
new_window pixel 2
new_float pixel 2

# ----------------------------------------------------------------------------


# BARS -----------------------------------------------------------------------

# LVDS1 bar
bar {
	output            LVDS1
	status_command    i3status
	position          bottom
	workspace_buttons yes
	tray_output primary

	font pango:Droid Sans Mono, Icons, FontAwesome 10

	colors {
		background #000000
		statusline #babdb6
		separator #babdb6

		focused_workspace  #000000 #babdb6
		active_workspace   #ffffff #333333
		inactive_workspace #888888 #2e3436
		urgent_workspace   #ffffff #cc0000
	}
}

# VGA1 bar
bar {
	output            VGA1
	status_command    i3status
	position          bottom
	workspace_buttons yes

	font pango:Droid Sans Mono, Icons, FontAwesome 10

	colors {
		background #000000
		statusline #babdb6
		separator #babdb6

		focused_workspace  #000000 #babdb6
		active_workspace   #ffffff #333333
		inactive_workspace #888888 #2e3436
		urgent_workspace   #ffffff #cc0000
	}
}

# ----------------------------------------------------------------------------


# SCRATCHPAD -----------------------------------------------------------------

# Scratchpad
# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the first scratchpad window
bindsym $mod+minus scratchpad show

# ----------------------------------------------------------------------------


# AUTOSTART ------------------------------------------------------------------

# Network Manager Applet
exec /usr/bin/nm-applet

# Clipit
exec clipit

# Screen off after 5 minutes
exec --no-startup-id xset dpms 600

# Solid Color Background
exec --no-startup-id xsetroot -solid "#050505"

# set the laptop monitor as default (primary)
exec xrandr --output LVDS1 --primary

# set the background using feh
exec --no-startup-id sh ~/.fehbg

# load the Xresources
exec --no-startup-id "xrdb ~/.Xresources"

# ----------------------------------------------------------------------------
