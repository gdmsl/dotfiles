! xterm settings --------------------------------------------------------------

! make xterm 256 color compatible
xterm*termName:		xterm-256color

! enable UTF-8 locale
xterm*locale:		true
xterm*utf8:		2

! fonts and colors
xterm*faceName:		Source Code Pro::size=10
xterm*font:		7x13
xterm*dynamicColors:	true
xterm*eightBitInput:	true

! scrollback and scrollbar
xterm*saveLines:	10240
xterm*scrollBar:	false
xterm*toolBar:		false

! urxvt settings --------------------------------------------------------------
URxvt*scrollBar:    false
URxvt.font: xft:Source Code Pro:size=10
URxvt.letterSpace: -2
URxvt.perl-ext-common:      default,clipboard,url-select,keyboard-select
URxvt.url-select.launcher:  firefox
URxvt.url-select.underline: true
URxvt.keysym.M-u:           perl:url-select:select_next
URxvt.keysym.M-Escape:      perl:keyboard-select:activate
URxvt.keysym.M-s:           perl:keyboard-select:search

! colorscheme
!#include "/home/gdmsl/.xrdb/solarized.xrdb"
!#include "/home/gdmsl/.xrdb/tango2.xrdb"
#include "/home/gdmsl/.xrdb/base16-monokai.dark.xrdb"

