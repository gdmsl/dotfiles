[push]
	default = simple

[url "https://aur.archlinux.org/"]
    insteadOf = aur:

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[pull]
	rebase = false

[core]
    pager = delta

[delta]
    side-by-side = true
    line-numbers = true
    navigate = true

[interactive]
    diffFilter = delta --color-only

[init]
	defaultBranch = main
[credential]
	helper = /usr/lib/git-core/git-credential-libsecret
