[Unit]
Description=Imapfilter and Isync Service

[Service]
Type=oneshot
ExecStart=/usr/bin/imapfilter
ExecStart=/usr/bin/mbsync -Va
# Give 40 seconds for imapfilter and mbsync to gracefully stop before hard
# killing it.
TimeoutStopSec=60
#Restart=on-watchdog
#WatchdogSec=300
StandardOutput=syslog
StandardError=syslog

[Install]
WantedBy=default.target
