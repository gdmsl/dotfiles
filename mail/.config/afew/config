[global]

[SpamFilter]
spam_tag = spam
[KillThreadsFilter]
[ListMailsFilter]
[ArchiveSentMailsFilter]
sent_tag = sent

[Filter.0]
query = subject:URGENT AND -tag:urgent
tags = +urgent;+inbox;-new
message = Urgent mails

[Filter.1]
query = 'folder:"GMail/trash"'
tags = +trash;-new;-inbox
message = Tag email in GMail/trash as trashed

[Filter.2]
query = 'folder:"UDS/trash"'
tags = +trash;-new;-inbox
message = Tag email in UDS-ETU/trash as trashed

[Filter.3]
query = 'folder:"UDS-ETU/trash"'
tags = +trash;-new;-inbox
message = Tag email in UDS/trash as trashed

[Filter.4]
query = from:"SLURM SLURM" AND -tag:trash
tags = +notification;-inbox;-new;+clusters/UDSjobs
message = Manage slurm notifications

[Filter.5]
query = subject:reminder OR subject:rappel
tags = +reminder
message = Reminders

[InboxFilter]

[MailMover]
rename = True
folders = GMail/inbox UDS/inbox UDS/spam UDS-ETU/inbox UDS-ETU/spam UDS/trash UDS-ETU/trash UDS/archive UDS-ETU/archive
GMail/inbox = 'tag:spam':"GMail/spam" '-tag:inbox AND -tag:trash AND -tag:spam':"GMail/archive" 'tag:trash AND -tag:spam':"GMail/trash"
GMail/spam = '-tag:spam AND tag:inbox':"GMail/inbox" '-tag:spam':"GMail/archive"
GMail/trash = '-tag:trash AND tag:inbox':"GMail/inbox" '-tag:trash AND -tag:inbox':"GMail/archive"
UDS/inbox = 'tag:spam':"UDS/spam" '-tag:inbox AND -tag:trash AND -tag:spam':"UDS/archive" 'tag:trash AND -tag:spam':"UDS/trash"
UDS/spam = '-tag:spam AND tag:inbox':"UDS/inbox" '-tag:spam':"UDS/archive"
UDS/trash = '-tag:trash AND tag:inbox':"UDS/inbox" '-tag:trash AND -tag:inbox':"UDS/archive"
UDS/archive = 'tag:trash':"UDS/trash" 'tag:inbox and -tag:trash and -tag:spam':"UDS/inbox" 'tag:spam':"UDS/spam"
UDS-ETU/inbox = 'tag:spam':"UDS-ETU/spam" '-tag:inbox AND -tag:trash AND -tag:spam':"UDS-ETU/archive" 'tag:trash AND -tag:spam':"UDS-ETU/trash"
UDS-ETU/spam = '-tag:spam AND tag:inbox':"UDS-ETU/inbox" '-tag:spam':"UDS-ETU/archive"
UDS-ETU/trash = '-tag:trash AND tag:inbox':"UDS-ETU/inbox" '-tag:trash AND -tag:inbox':"UDS-ETU/archive"
UDS-ETU/archive = 'tag:trash':"UDS-ETU/trash" 'tag:inbox and -tag:trash and -tag:spam':"UDS-ETU/inbox" 'tag:spam':"UDS-ETU/spam"
