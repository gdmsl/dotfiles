#
# ~/.mutt/mailcap
#

# mailcap - MIME configuration file
# [Comment-out next line so that we can use w3m even within X.]
text/html;          /usr/bin/chromium %s; test=runningx; needsterminal
text/html;          w3m %s; nametemplate=%s.html
text/html;          w3m -dump %s; nametemplate=%s.html; copiousoutput

application/x-tex; nvim %s


# Add capability to edit attachments from the compose menu.
#
# Mutt can only edit attachments if they have a mailcap edit entry.
# (This would be a good thing to fix.)  However, a mailcap entry
# apparently must include the display function--it can't be defaulted.
# The combination "cat; copiousoutput" comes close to the default in
# that in invokes the default pager on the output of cat.  However,
# there is apparently no way to specify the default editor--a shell
# environment variable such as $VISUAL or $EDITOR is as close as we can
# get.
#
text/*;                             iconv -t UTF-8; copiousoutput; edit=$VISUAL %s
message/rfc822;                     cat; copiousoutput; edit=$VISUAL %s

application/msword;                 mutt_bgrun libreoffice %s; test=runningx
application/vnd.msword;             mutt_bgrun libreoffice %s; test=runningx
#
application/excel;                  mutt_bgrun libreoffice %s; test=runningx
application/msexcel;                mutt_bgrun libreoffice %s; test=runningx
application/vnd.ms-excel;           mutt_bgrun libreoffice %s; test=runningx
application/x-excel;                mutt_bgrun libreoffice %s; test=runningx
application/x-msexcel;              mutt_bgrun libreoffice %s; test=runningx
application/ms-Excel;               mutt_bgrun libreoffice %s; test=runningx
#
application/vnd.ms-powerpoint;      mutt_bgrun libreoffice %s; test=runningx
application/x-mspowerpoint;         mutt_bgrun libreoffice %s; test=runningx
application/ppt;                    mutt_bgrun libreoffice %s; test=runningx
application/pdf;                    mutt_bgrun zathura %s; test=runningx
application/postscript;             mutt_bgrun zathura %s; test=runningx
application/rtf;                    mutt_bgrun libreoffice %s; test=runningx
application/ms-tnef;                tnef -w %s
#
application/octet-stream;           mutt.octet.filter -x %s; test=runningx
application/octet-stream;           mutt.octet.filter -v %s
application/octet-stream;           mutt.octet.filter %s; copiousoutput
application/octet-stream;           mutt_octet_view -x %s; test=runningx
application/octet-stream;           mutt_octet_view -v %s
application/octet-stream;           mutt_octet_view %s; copiousoutput
#
image/*;                            mutt_bgrun qiv %s; test=runningx
