set   mbox_type   = Maildir
set   sendmail    = /usr/bin/msmtp

set   spoolfile   = "+outlook/inbox"
set   postponed   = "+outlook/draft"
set   from        = "guido.masella@live.com"
set   record      = "+outlook/sent"

macro index,pager D \
    "<save-message>+outlook/deleted<enter>" \
        "move message to the trash"

macro index,pager S \
    "<save-message>+outlook/spam<enter>" \
        "mark message as spam"
