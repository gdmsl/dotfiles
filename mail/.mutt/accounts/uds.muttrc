set   mbox_type   = Maildir
set   sendmail    = /usr/bin/msmtp

set   spoolfile   = "+uds/inbox"
set   postponed   = "+uds/draft"
set   from        = "masella@unistra.fr"
set   record      = "+uds/sent"

macro index,pager D \
    "<save-message>+uds/trash<enter>" \
        "move message to the trash"

macro index,pager S \
    "<save-message>+uds/spam<enter>" \
        "mark message as spam"
