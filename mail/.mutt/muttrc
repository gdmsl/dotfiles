#
# NeoMutt configuration
#
# AUTHOR: Guido Masella <guido.masella@gmail.com>
#

push V

set header_cache     = ~/.cache/mutt/headers
set message_cachedir = ~/.cache/mutt/bodies
set mailcap_path     = ~/.mutt/mailcap
set certificate_file = ~/.cache/mutt/certificates
set tmpdir           = ~/.cache/mutt/tmp
set signature        = ~/.signature

source ~/.mutt/general.muttrc
source ~/.mutt/colors.muttrc
source ~/.mutt/macros.muttrc
source ~/.mutt/bindings.muttrc
source ~/.mutt/auto_views.muttrc
source ~/.mutt/notmuch.muttrc
source ~/.mutt/gpg.muttrc

# accounts
folder-hook 'gmail' 'source ~/.mutt/accounts/gmail.muttrc'
folder-hook 'outlook' 'source ~/.mutt/accounts/outlook.muttrc'
source ~/.mutt/accounts/gmail.muttrc

# list of mailboxes generated by offlineimap
source ~/.mutt/mailboxes
