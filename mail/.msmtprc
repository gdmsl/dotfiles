# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.cache/msmtp.log

account        GMail
host           smtp.gmail.com
port           587
from           guido.masella@gmail.com
user           guido.masella@gmail.com
