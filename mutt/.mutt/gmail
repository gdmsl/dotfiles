set   mbox_type   = Maildir
set   sendmail    = /usr/bin/msmtp

set   folder      = ~/Mail
set   spoolfile   = "+Gmail/INBOX"
set   mbox        = "+Gmail/[Gmail].All Mail"
set   postponed   = "+Gmail/[Gmail].Drafts"
set   from        = "guido.masella@gmail.com"
unset record

mailboxes +Gmail/INBOX +Gmail/Important +Gmail/[Gmail].All\ Mail

macro index D \
    "<save-message>+Gmail/[Gmail].Trash<enter>" \
        "move message to the trash"

macro index S \
    "<save-message>+Gmail/[Gmail].Spam<enter>" \
        "mark message as spam"
