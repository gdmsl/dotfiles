[general]
accounts = Gmail
ui = ttyui
pythonfile = ~/.local/bin/offlineimap.py

[Account Gmail]
localrepository = Gmail-local
remoterepository = Gmail-remote
status_backend = sqlite

[Repository Gmail-local]
type = Maildir
localfolders = ~/Mail/Gmail
nametrans = lambda folder: {'archive': '[Gmail]/All Mail',
                            }.get(folder, folder)

[Repository Gmail-remote]
type = Gmail
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
remoteusereval = get_username("gmail")
remotepasseval = get_password("gmail")
nametrans = lambda folder: {'[Gmail]/All Mail': 'archive',
                            }.get(folder, folder)
folderfilter = lambda folder: folder == '[Gmail]/All Mail'
