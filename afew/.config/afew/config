[MailMover]
folders = gmail/inbox gmail/spam uds/inbox uds/spam uds-etu/inbox uds-etu/spam
gmail/inbox = 'tag:spam':gmail/spam '-tag:inbox OR -tag:new':gmail/archive
gmail/spam = 'NOT tag:spam AND tag:inbox':gmail/inbox 'NOT tag:spam':gmail/archive
uds/inbox = 'tag:spam':uds/spam '-tag:inbox OR -tag:new':uds/archive
uds/spam = 'NOT tag:spam AND tag:inbox':uds/inbox 'NOT tag:spam':uds/archive
