${font Source Sans Pro:bold:size=8.5}ROOT $font$font$alignr ${fs_type /}
${fs_used /} / ${fs_size /} $alignr ${fs_used_perc /} %
${fs_bar /}
${font Source Sans Pro:bold:size=8.5}HOME $font$font$alignr ${fs_type /home}
${fs_used /home} / ${fs_size /home} $alignr ${fs_used_perc /home} %
${fs_bar /home}
${font Source Sans Pro:bold:size=8.5}VMS $font$font$alignr ${fs_type /vms}
${fs_used /vms} / ${fs_size /vms} $alignr ${fs_used_perc /vms} %
${fs_bar /vms}
