$color${font}${font Source Sans Pro:bold:size=8.5}RAM$font $mem / $memmax $alignr $memperc %
$membar
${font Source Sans Pro:bold:size=8.5}SWAP$font $swap / $swapmax $alignr $swapperc
${swapbar};

# NETWORK
${font Source Sans Pro:Bold:size=10}${color #d79921}NETWORK ${hr 2}
$color${font Source Sans Pro:bold:size=8.5}External IP ${font}${alignr}${execi 3600 wget -O - http://ip.tupeux.com | tail}$font

${font Source Sans Pro:bold:size=8.5}enp3s0 $font$alignr ${addr enp3s0}
down ${downspeedf enp3s0} kb/s $alignr up $alignr ${upspeedf enp3s0} kb/s
down total ${totaldown enp3s0} $alignr up total ${totalup enp3s0}

# HDD
