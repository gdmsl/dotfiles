! xterm settings --------------------------------------------------------------

! make xterm 256 color compatible
xterm*termName:		xterm-256color

! enable UTF-8 locale
xterm*locale:		true
xterm*utf8:		2

! fonts and colors
xterm*faceName:		Hack::size=10
xterm*font:		6x13
xterm*dynamicColors:	true
xterm*eightBitInput:	true

! scrollback and scrollbar
xterm*saveLines:	10240
xterm*scrollBar:	false
xterm*toolBar:		false

! urxvt settings --------------------------------------------------------------
URxvt*scrollBar:            false
URxvt.font:                 xft:Hack:size=10
URxvt.letterSpace:          -2
URxvt.perl-ext-common:      default,matcher,clipboard,selection-to-clipboard
URxvt.url-select.launcher:  chromium
URxvt.url-select.underline: true
URxvt.keysym.M-c:           perl:clipboard:copy
URxvt.keysym.M-v:           perl:clipboard:paste
URxvt.keysym.M-C-v:         perl:clipboard:paste_escaped
URxvt.matcher.button:       1
URxvt*saveLines:            12000
URxvt*cursorUnderline:      true
URxvt*cursorBlink:          true

! xft settings ---------------------------------------------------------------
Xft.lcdfilter:  lcddefault
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  slight

! colorscheme
#include "/home/gdmsl/.xrdb/base16-onedark-256.Xresources"

! i3wm -----------------------------------------------------------------------
i3wm.focused: base0B
i3wm.focused_t: base00

i3wm.urgent: base08
i3wm.urgent_t: base00

i3wm.active: base02
i3wm.active_t: base05

i3wm.inactive: base01
i3wm.inactive_t: base04

i3wm.indicator: base0E
i3wm.separator: base00

! polybar --------------------------------------------------------------------
polybar.background_alt: base01
polybar.foreground_alt: base04
polybar.background_alt2: base0B
polybar.foreground_alt2: base00
polybar.primary: base0B
polybar.secondary: base0A
polybar.urgent: base08

! rofi -----------------------------------------------------------------------
rofi.color-window: base01,base0B
rofi.color-normal: base01,base05,base01,base01,base06
rofi.color-active: base01,base05,base01,base01,base06
rofi.font:  Fira Mono 10
rofi.bw:    3
rofi.o:     100
rofi.terminal:  termite
rofi.location:  0
rofi.separator-style: solid

